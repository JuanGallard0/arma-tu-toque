datasource db {
  provider = "postgresql"
  url      =  env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
}

model Link {
  id          String   @id @default(uuid())
  index       Int      @default(autoincrement())
  title       String
  description String
  url         String
  imageUrl    String
  category    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  users       User[]
  owner       User     @relation(fields: [ownerId] ,references: [id],"profileRelation")
  ownerId     String   @unique
  firstName   String
  lastName    String
  email       String
  birthDate   String
  state       String
  hasInstruments  Boolean
  instruments String
}

model RFQ {
  id          String   @id @default(uuid())
  title       String
  description String
  address1    String
  address2    String
  time        String
  date        String
  type        String
  accepted    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  sender      User     @relation(fields: [senderId], references: [id], "senderRelation")
  senderId    String   
  receiver    User     @relation(fields: [receriverId], references: [id], "receiverRelation")
  receriverId String   
}

model User {
  id        String   @id @default(uuid())
  email     String?  @unique
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role     @default(USER)
  favorites Link[]
  profile   Link?    @relation("profileRelation")
  sentRFQs  RFQ[]    @relation("senderRelation")
  receivedRFQs RFQ[] @relation("receiverRelation")
}

enum Role {
  USER
  ADMIN
}
