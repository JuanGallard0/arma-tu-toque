datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["dataProxy"]
}

model Link {
  id          String   @id @default(uuid())
  index       Int      @default(autoincrement())
  title       String
  description String
  url         String
  imageUrl    String
  category    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  users       User[]
  owner       User     @relation("profileRelation", fields: [ownerId], references: [id])
  ownerId     String   @unique
}

model User {
  id        String   @id @default(uuid())
  email     String?  @unique
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role     @default(USER)
  favorites Link[]
  profile   Link?    @relation("profileRelation")
}

enum Role {
  USER
  ADMIN
}
