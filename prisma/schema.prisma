datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["dataProxy"]
}

model Link {
  id          String   @id @default(uuid())
  index       Int      @default(autoincrement())
  title       String
  description String
  url         String
  imageUrl    String
  category    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  users       User[]
  owner       User     @relation(fields: [ownerId] ,references: [id],"profileRelation")
  ownerId     String   @unique
}

model RFQ {
  id          String   @id @default(uuid())
  title       String
  description String
  address1    String
  address2    String
  time        Int
  date        DateTime
  type        String
  accepeted   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  sender      User     @relation(fields: [senderId], references: [id], "senderRelation")
  senderId    String   @unique
  receiver    User     @relation(fields: [receriverId], references: [id], "receiverRelation")
  receriverId String   @unique
}

model User {
  id        String   @id @default(uuid())
  email     String?  @unique
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role     @default(USER)
  favorites Link[]
  profile   Link?    @relation("profileRelation")
  sentRFQs  RFQ[]    @relation("senderRelation")
  receivedRFQs RFQ[] @relation("receiverRelation")
}

enum Role {
  USER
  ADMIN
}
